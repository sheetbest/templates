{
  "name": "sheetbest-templates",
  "version": "1.0.0",
  "description": "A collection of pre-built templates for Google Sheets integrations using the Sheet Best JS Library",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "build:standalone": "node build.js --standalone",
    "build:no-inject": "node build.js --no-inject",
    "start": "npm run build && npx http-server dist -p 3000 -o",
    "start:standalone": "npm run build:standalone && npx http-server dist -p 3000 -o",
    "dev": "node dev-server.js",
    "dev:standalone": "node dev-server.js --standalone",
    "dev:no-inject": "node dev-server.js --no-inject",
    "watch": "npx concurrently \"npm run watch:files\" \"npm run serve\"",
    "watch:standalone": "INJECT_FEATURES=false npx concurrently \"npm run watch:files:standalone\" \"npm run serve\"",
    "watch:files": "npx chokidar \"templates/**/*\" \"src/**/*\" -c \"node build.js --watch\"",
    "watch:files:standalone": "npx chokidar \"templates/**/*\" \"src/**/*\" -c \"INJECT_FEATURES=false node build.js --watch\"",
    "serve": "npx http-server dist -p 3000 -o --cors",
    "dev:feedback": "cd templates/feedback && npm start",
    "dev:testimonials": "cd templates/testimonials && npm start",
    "dev:jobs": "cd templates/jobs && npm start",
    "dev:inventory": "cd templates/inventory && npm start"
  },
  "keywords": [
    "google-sheets",
    "templates",
    "sheetbest",
    "forms",
    "api",
    "no-code"
  ],
  "author": "SheetBest",
  "license": "MIT",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheetbest/templates"
  },
  "homepage": "https://github.com/sheetbest/templates#readme",
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
